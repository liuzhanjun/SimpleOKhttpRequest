<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="liu.zhan.jun.simplerequest.MainActivity"
    >


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请求Post1"
                />
            <Button
                android:id="@+id/btn_request_get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请求get1"
                />

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上传文件1"
                />
            <Button
                android:id="@+id/btn_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下载文件1"
                />
            <Button
                android:id="@+id/cancel_btn_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消请求Post1"
                />
            <Button
                android:id="@+id/cancel_btn_request_get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消请求get1"
                />

            <Button
                android:id="@+id/cancel_btn_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消上传文件1"
                />
            <Button
                android:id="@+id/cancel_btn_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消下载文件1"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next to"
                android:onClick="next"
                />
            <TextView
                android:id="@+id/textView"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="cccccccccc"/>
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
